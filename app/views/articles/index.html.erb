<%= image_tag "tekkun.png", width: 150 %><br>

<%= link_to "新規記事作成", new_article_path %><br>
<% @articles.each do |article| %>
　 <h2><%= link_to article.title, article_path(article) %></h2>
 　<%= article.text %>
