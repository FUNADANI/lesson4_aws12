<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <%= @article.errors.count %>個のエラーがあります<br>
    <% @article.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %><br>
  </p>

  <p>
  <%= f.submit %>
  </p>
<% end %>